<?xml version="1.0" encoding="UTF-8"?>
<projectDescription>
	<name>MVC Calc</name>
	<comment>
	MVC-based Java Calculator project.
	Includes support for: Java, JUnit, Maven, Web Tools, Spring, Git, Annotation Processing, and Remote Collaboration.
	</comment>

	<projects>
		<!-- ✅ Potential future modules -->
		<!-- <project>CalculatorCore</project> -->
		<!-- <project>SharedUtils</project> -->
	</projects>

	<buildSpec>
		<!-- ✅ Java Compiler -->
		<buildCommand>
			<name>org.eclipse.jdt.core.javabuilder</name>
			<arguments/>
		</buildCommand>

		<!-- ✅ JUnit Test Runner -->
		<buildCommand>
			<name>org.eclipse.jdt.junit.JUnitBuilder</name>
			<arguments/>
		</buildCommand>

		<!-- ✅ Maven Build Support -->
		<buildCommand>
			<name>org.eclipse.m2e.core.maven2Builder</name>
			<arguments/>
		</buildCommand>

		<!-- ✅ Web Project Facets -->
		<buildCommand>
			<name>org.eclipse.wst.common.project.facet.core.builder</name>
			<arguments/>
		</buildCommand>

		<!-- ✅ Task Tags Builder (for TODOs, FIXMEs) -->
		<buildCommand>
			<name>org.eclipse.ui.externaltools.ExternalToolBuilder</name>
			<arguments/>
		</buildCommand>
	</buildSpec>

	<natures>
		<!-- ✅ Java -->
		<nature>org.eclipse.jdt.core.javanature</nature>

		<!-- ✅ Maven -->
		<nature>org.eclipse.m2e.core.maven2Nature</nature>

		<!-- ✅ Web Tools -->
		<nature>org.eclipse.wst.common.project.facet.core.nature</nature>

		<!-- ✅ Spring Support -->
		<nature>org.eclipse.spring.ide.nature.simple</nature>

		<!-- ✅ Git Integration -->
		<nature>org.eclipse.egit.core.GitNature</nature>

		<!-- ✅ Annotation Processing (for Lombok, Spring Boot) -->
		<nature>org.eclipse.jdt.apt.core.aptNature</nature>

		<!-- ✅ Remote Systems Support (for SFTP, SSH projects) -->
		<nature>org.eclipse.rse.ui.remoteSystemsNature</nature>
	</natures>
</projectDescription>
