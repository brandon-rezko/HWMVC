<?xml version="1.0" encoding="UTF-8"?>
<projectDescription>
	<name>MVC Calc</name>
	<comment>Java MVC Calculator with Eclipse support for JDT, JUnit, Maven, Spring, Git, and Web tools</comment>

	<!-- ✅ Optional: Future linked projects (modular structure) -->
	<projects>
		<!-- <project>CalculatorCore</project> -->
		<!-- <project>CommonUtils</project> -->
	</projects>

	<buildSpec>
		<!-- ✅ Java compiler -->
		<buildCommand>
			<name>org.eclipse.jdt.core.javabuilder</name>
			<arguments/>
		</buildCommand>

		<!-- ✅ JUnit test runner -->
		<buildCommand>
			<name>org.eclipse.jdt.junit.JUnitBuilder</name>
			<arguments/>
		</buildCommand>

		<!-- ✅ Maven builder -->
		<buildCommand>
			<name>org.eclipse.m2e.core.maven2Builder</name>
			<arguments/>
		</buildCommand>

		<!-- ✅ Web project builder -->
		<buildCommand>
			<name>org.eclipse.wst.common.project.facet.core.builder</name>
			<arguments/>
		</buildCommand>
	</buildSpec>

	<natures>
		<!-- ✅ Java -->
		<nature>org.eclipse.jdt.core.javanature</nature>

		<!-- ✅ Maven -->
		<nature>org.eclipse.m2e.core.maven2Nature</nature>

		<!-- ✅ Web tools -->
		<nature>org.eclipse.wst.common.project.facet.core.nature</nature>

		<!-- ✅ Spring support -->
		<nature>org.eclipse.spring.ide.nature.simple</nature>

		<!-- ✅ Git support -->
		<nature>org.eclipse.egit.core.GitNature</nature>
	</natures>
</projectDescription>
